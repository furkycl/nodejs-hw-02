{
  "openapi": "3.1.0",
  "info": {
    "version": "1.0.0",
    "title": "Contacts API",
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "description": "Kişisel bir kişi rehberini yönetmek için kullanılan bir API. Kullanıcı kimlik doğrulaması, kişi ekleme, silme, güncelleme ve listeleme işlemlerini destekler.\n"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Yerel geliştirme sunucusu"
    },
    {
      "url": null,
      "description": "Yayın sunucusu (Render.com)"
    }
  ],
  "tags": [
    {
      "name": "Contacts",
      "description": "Kişilerle ilgili işlemler"
    },
    {
      "name": "Auth",
      "description": "Kimlik doğrulama ile ilgili işlemler"
    }
  ],
  "paths": {
    "/api/contacts": {
      "get": {
        "tags": [
          "Contacts"
        ],
        "summary": "Get all contacts",
        "operationId": "getContacts",
        "description": "Retrieves a paginated list of all contacts for the authenticated user.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "The page number to retrieve.",
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "The number of items to return per page.",
            "schema": {
              "type": "integer",
              "default": 10
            }
          },
          {
            "name": "favorite",
            "in": "query",
            "description": "Filter contacts by their favorite status.",
            "schema": {
              "type": "boolean"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of contacts.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "_id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Contacts"
        ],
        "summary": "Create a new contact",
        "operationId": "createContact",
        "description": "Adds a new contact to the user's contact list. A photo can be uploaded as well.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "description": "The contact object that needs to be added to the address book.",
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "required": [
                  "name",
                  "email",
                  "phone"
                ],
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "John Doe"
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "john.doe@example.com"
                  },
                  "phone": {
                    "type": "string",
                    "example": "(123) 456-7890"
                  },
                  "photo": {
                    "type": "string",
                    "format": "binary",
                    "description": "The contact's profile picture file to upload."
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Contact created successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Successfully created a contact!"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request. Invalid data provided."
          }
        }
      }
    },
    "/api/contacts/{contactId}": {
      "get": {
        "tags": [
          "Contacts"
        ],
        "summary": "Get a single contact by ID",
        "operationId": "getContactById",
        "description": "Retrieves the details of a specific contact using its unique ID.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "contactId",
            "in": "path",
            "description": "The unique identifier of the contact.",
            "required": true,
            "schema": {
              "type": "string",
              "example": "6884ef5629900d0242c97e58"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response with the contact details.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "_id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "phone": {
                      "type": "string"
                    },
                    "photo": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Not Found. The contact with the specified ID was not found."
          }
        }
      },
      "patch": {
        "tags": [
          "Contacts"
        ],
        "summary": "Update an existing contact",
        "operationId": "updateContact",
        "description": "Updates one or more fields of an existing contact by their ID.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "contactId",
            "in": "path",
            "description": "The unique identifier of the contact to update.",
            "required": true,
            "schema": {
              "type": "string",
              "example": "6884ef5629900d0242c97e58"
            }
          }
        ],
        "requestBody": {
          "description": "The fields of the contact to update.",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Jane Doe Updated"
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "jane.doe.updated@example.com"
                  },
                  "phone": {
                    "type": "string",
                    "example": "(987) 654-3210"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Contact updated successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "_id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request. Invalid data provided."
          },
          "404": {
            "description": "Not Found. The contact with the specified ID was not found."
          }
        }
      },
      "delete": {
        "tags": [
          "Contacts"
        ],
        "summary": "Delete a contact",
        "operationId": "deleteContact",
        "description": "Deletes a contact from the address book by their ID.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "contactId",
            "in": "path",
            "description": "The unique identifier of the contact to delete.",
            "required": true,
            "schema": {
              "type": "string",
              "example": "6884ef5_silinecek_id_900d0242c97e58"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content. The contact was deleted successfully."
          },
          "404": {
            "description": "Not Found. The contact with the specified ID was not found."
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}